<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ComposeGroceryActivity">

    <EditText
        android:id="@+id/etGrocComposeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/ivGrocComposeFoodPic"
        android:hint="Name" />

    <EditText
        android:id="@+id/etGrocComposBuyBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etGrocComposeName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/ivGrocComposeFoodPic"
        android:hint="Buy by (MM/dd/yyyy)" />

    <EditText
        android:id="@+id/etGrocComposAmountUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etGrocComposBuyBy"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/etGrocComposAmountNum"
        android:hint="Units (g)" />

    <EditText
        android:id="@+id/etGrocComposAmountNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etGrocComposBuyBy"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:hint="Amount (3)" />

    <EditText
        android:id="@+id/etGrocComposDescript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etGrocComposAmountUnits"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Description" />

    <ImageView
        android:id="@+id/ivGrocComposeFoodPic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_image_placeholder3" />

    <Button
        android:id="@+id/btnAddGrocItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etGrocComposePrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:text="Add" />

    <EditText
        android:id="@+id/etGrocComposePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etGrocComposDescript"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="5"
        android:hint="$ Price "
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etGrocComposeBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etGrocComposDescript"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/etGrocComposePrice"
        android:ems="5"
        android:hint="Brand"
        android:inputType="textPersonName" />

</RelativeLayout>